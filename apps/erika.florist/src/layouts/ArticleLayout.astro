---
import BaseLayout from "$layouts/BaseLayout.astro"
import ContentHeader from "$components/shared/ContentHeader.astro"
import type { Article } from "$data/articles"
import type { MarkdownInstance } from "$data/shared"

export interface Props {
  article: MarkdownInstance<Article>
}

const { article } = Astro.props
---

<BaseLayout title={article.frontmatter.title} description={article.frontmatter.tagline}>
  <article class="post mx-auto">
    <ContentHeader item={article.frontmatter} includeTags />
    <article.Content />
  </article>
</BaseLayout>
