---
import BaseLayout from "$layouts/BaseLayout.astro"
import ContentHeader from "$components/shared/ContentHeader.astro"
import type { Article } from "$data/articles"
import { MarkdownInstance } from "$data/shared"

export interface Props {
  article: MarkdownInstance<Article>
}

const { article } = Astro.props as Props
---

<BaseLayout
  title={article.frontmatter.title}
  description={article.frontmatter.tagline}
  socialImage={article.frontmatter.socialImage ?? true}
>
  <article class="post mx-auto">
    <ContentHeader item={article.frontmatter} includeTags={true} />
    <!-- prettier-ignore -->
    <article.Content />
  </article>
</BaseLayout>
