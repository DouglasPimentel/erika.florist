---
import BaseLayout from "$layouts/BaseLayout.astro"
import ContentHeader from "$components/ContentHeader.astro"
import { Markdown } from "astro/components"

const { article } = Astro.props
---

<BaseLayout title={article.title} description={article.tagline}>
  <article class="post mx-auto">
    <ContentHeader item={article} includeTags={true} />
    <Markdown content={article.astro.source} />
  </article>
</BaseLayout>
