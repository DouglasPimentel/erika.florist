    <div class="flex flex-wrap sm:mx-10 mt-2 mb-6 gap-5 sm:gap-4 justify-center items-center">
      {featuredProjects.map((project) => (
        <div class="h-[180px] relative">
          <a href={project.frontmatter.url}>
