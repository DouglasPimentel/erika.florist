---
import WikiLayout from "$layouts/WikiLayout.astro"
import { postProcessWikiItem, WikiItem } from "$data/wiki"
import { MarkdownInstance } from "$data/shared"

let rawWikiIndex = await Astro.glob<WikiItem>("/content/wiki/index.md")

const wikiIndex: MarkdownInstance<WikiItem> = {
  ...rawWikiIndex[0],
  frontmatter: postProcessWikiItem(rawWikiIndex[0].frontmatter, rawWikiIndex[0].file),
}
---

<WikiLayout wikiItem={wikiIndex} />
