---
import type { Article } from "$data/articles";
import { readableDate } from "$utils";

export interface Props {
  article: Article;
}

const { article } = Astro.props;
---

<section class="mb-3">
  <a href={article.url.pathname}>
    <h4 class="m-0 inline-block text-xl">{article.title}</h4>
  </a>

  <div class="mb-2 text-sm text-creative-work">
    {readableDate(article.date)}
    Â·
    {
      article.tags
        .map((tag) => (
          <a href={"/articles/tags/" + tag + "/"} class="underline">
            {tag}
          </a>
        ))
        .reduce((prev: string, curr: string) => (prev === null ? [curr] : [prev, ", ", curr]))
    }
  </div>

  {article.tagline || null}
</section>
