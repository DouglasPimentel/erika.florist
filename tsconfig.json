{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "$components/*": ["./src/components/*"],
      "$data/*": ["./src/data/*"],
      "$layouts/*": ["./src/layouts/*"],
      "$theme/*": ["./src/theme/*"],
      "$types/*": ["./src/types/*"],
      "$utils": ["./src/utils/index.ts"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
